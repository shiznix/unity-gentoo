+	CcLangselectorPanelPrivate *priv = self->priv;
+
+        if (priv->login) {
+                set_system_region (self, region);
+        } else {
+                if (g_strcmp0 (region, priv->region) == 0)
+                        return;
+                g_settings_set_string (priv->locale_settings, KEY_REGION, region);
+                if (priv->login_auto_apply)
+                        set_system_region (self, region);
