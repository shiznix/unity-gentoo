+    {
+        cancel_current_search (self, TRUE);
+    }
+
+    cancel_result_meta_requests (self, invocation);
+
+    nautilus_shell_search_provider2_complete_xubuntu_cancel (skeleton, invocation);
+
+    return TRUE;
+}
