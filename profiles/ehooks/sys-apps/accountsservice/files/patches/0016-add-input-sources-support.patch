+{
+        GVariantBuilder builder;
+        GSequence *indices;
+        GSequenceIter *indices_iter;
+        gchar **groups;
+        gchar **groups_iter;
+
+        indices = g_sequence_new (NULL);
+        groups = g_key_file_get_groups (key_file, NULL);
+
